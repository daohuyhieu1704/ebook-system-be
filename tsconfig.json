{
    "compilerOptions": {
      "target": "es5",
      "module": "NodeNext",
      "lib": ["es6"],
      "allowJs": true,
      "outDir": "build",
      "paths": {
        "@/*": ["./src/*"],
        "@core/*": ["./src/common/core/*"]
      },
      "rootDir": "src",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "noImplicitThis": false,
      "emitDecoratorMetadata": true
    }
  }